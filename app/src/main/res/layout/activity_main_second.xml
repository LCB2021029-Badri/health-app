<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivitySecond">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#0EACDC"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"/>

    <RelativeLayout
        android:layout_below="@id/tv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cough"
            android:layout_width="300dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:button="@null"
            android:drawableRight="@drawable/checkboxbadri"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="Cough &amp; Cold"
            />

        <CheckBox
            android:id="@+id/cold"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cough"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="Cold" />

        <CheckBox
            android:layout_below="@id/cold"
            android:id="@+id/headache"
            android:layout_width="300dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:button="@null"
            android:drawableRight="@drawable/checkboxbadri"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Headache" />
        <CheckBox
            android:id="@+id/bodypains"
            android:layout_width="300dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:drawableRight="@drawable/checkboxbadri"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="30sp"
            android:button="@null"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/headache"
            android:text="Bodypains" />

        <CheckBox
            android:id="@+id/vomiting"
            android:layout_width="300dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawableRight="@drawable/checkboxbadri"
            android:button="@null"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodypains"
            android:layout_centerInParent="true"
            android:text="Vomiting" />
        <CheckBox
            android:id="@+id/smell"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawableRight="@drawable/checkboxbadri"
            android:textStyle="bold"
            android:textSize="30sp"
            android:button="@null"
            android:layout_below="@id/vomiting"
            android:layout_centerInParent="true"
            android:text="Unable to Smell" />


        <LinearLayout
            android:layout_below="@id/smell"
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/submit1"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:text="Submit"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttononclick"/>
            <Button
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/next2"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:text="Next"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttononclick" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>