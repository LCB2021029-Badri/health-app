<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFirsty"
    android:background="@drawable/img">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patitent Details"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#0EACDC"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"/>

    <RelativeLayout
        android:layout_below="@id/tv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editbackground"
        app:hintTextColor="@color/mainLight"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"
            android:background="@drawable/editbackground"
            android:drawableStart="@drawable/icon_name"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:textColorHint="@color/mainDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/one"
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editbackground"
        app:hintTextColor="@color/mainLight"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/editbackground"
            android:drawableStart="@drawable/baseline_date_range_24"
            android:drawablePadding="10dp"
            android:hint="Age"
            android:textColorHint="@color/mainDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/two"
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editbackground"
        app:hintTextColor="@color/mainLight"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"
            android:background="@drawable/editbackground"
            android:drawableStart="@drawable/icon_gender"
            android:drawablePadding="10dp"
            android:hint="Sex"
            android:textColorHint="@color/mainDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/three"
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editbackground"
        app:hintTextColor="@color/mainLight"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/editbackground"
            android:drawableStart="@drawable/icon_height"
            android:drawablePadding="10dp"
            android:hint="Height"
            android:textColorHint="@color/mainDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/four"
        android:id="@+id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editbackground"
        app:hintTextColor="@color/mainLight"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:background="@drawable/editbackground"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawableStart="@drawable/icon_weight"
            android:drawablePadding="10dp"
            android:hint="Weight"
            android:textColorHint="@color/mainDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_below="@id/five"
        android:id="@+id/six"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:padding="8dp"
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginHorizontal="15dp"
            android:text="Submit"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttononclick"/>
        <Button
            android:layout_weight="1"
            android:padding="8dp"
            android:id="@+id/next"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginHorizontal="15dp"
            android:text="Next"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttononclick" />

    </LinearLayout>






    </RelativeLayout>


</RelativeLayout>